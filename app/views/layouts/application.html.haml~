!!!5
%html
  %head
    %title ExternMe
    = stylesheet_link_tag "application", :media => "all"
    = javascript_include_tag "application"
    = csrf_meta_tags
  
  %body
    
    -if !@current_user
      -if current_page?(jobs_path)
        .account
          =link_to 'Login/Register', login_path, :method=>:get
      -else
        .account
          =link_to 'Back', jobs_path
    -else
      .account
        %p
        Welcome, 
        =link_to "#{@current_user.name}", user_path(User.find_by_email(@current_user.email)), :method=>:get
        |  
        =link_to 'Sign Out', logout_path, :method=>:delete

    - if flash[:notice]
      #notice.message= flash[:notice]
    - if flash[:warning]
      #warning.message= flash[:warning]
    - if flash.now[:warning]
      #nowwarning.message= flash.now[:warning]

    = yield
