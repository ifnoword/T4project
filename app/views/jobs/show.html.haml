%ul#jobdetails
  %li
    Company Name:
    = @job.companyname
  %br
  %li
    Job Title:
    = @job.title
  %br
  %li
    Job Description:
    = @job.desc
  %br
  %li
    Requirements:
    = @job.reqs
  %br
  %li
    Desired Qualifications:
    = @job.desire
  %br
  %li
    Location:
    = @job.city+' '+@job.city
  %br
  %li
    Link:
    = @job.link

= link_to 'Edit', edit_job_path(@job)
= link_to 'Delete', job_path(@job), :method => :delete, :confirm => 'Are you sure?'
