.middle
  .common_form#reg_form
    %h1 Create an account
    = form_tag users_path do
      .text_style
        -if flash[:acct_fail]
          -if !!flash[:acct_fail]['name']
            %p= 'Username '+flash[:acct_fail]['name']
        = text_field :user, 'name',:placeholder => 'Name'
        %br
        -if flash[:acct_fail]
          -if !!flash[:acct_fail]['email']
            %p= 'Email '+flash[:acct_fail]['email']
        = text_field :user, 'email',:placeholder => 'Email'
        %br
        -if flash[:acct_fail]
          -if !!flash[:acct_fail]['password']
            %p= 'Password '+flash[:acct_fail]['password']
        = password_field :user, 'password', :placeholder => 'Password'
        %br
        -if flash[:acct_fail]
          -if !!flash[:acct_fail]['password_confirmation']
            %p= flash[:acct_fail]['password_confirmation']
        = password_field :user, 'password_confirmation', :placeholder => 'PSW Confirm'
        %br
        = submit_tag 'Create my account',:class => 'common_button'  
